<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txttitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20sp"
                    android:background="#575E63"
                    android:gravity="center"
                    android:text="BIO-DATA"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="15sp"
                    android:gravity="center"
                    android:text="Personal Detail"
                    android:textColor="@color/teal_700"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/edtname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter  Name"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edtsurname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter Surname"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edtgender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter Gender"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edtbirth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter Date of Birth"
                    android:inputType="number"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edtplace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter Birth Place"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edtage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter Age"
                    android:inputType="number"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edthight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter Hight"
                    android:inputType="number"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edtweight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter weight"
                    android:inputType="number"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="15sp"
                    android:gravity="center"
                    android:text="Family Detail"
                    android:textColor="@color/teal_700"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/edtfather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter Father name"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edtmother"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter Mother name"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edtbrother"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter Brother name"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edtsister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter Sister name"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="15sp"
                    android:gravity="center"
                    android:text="Contact Detail"
                    android:textColor="@color/teal_700"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/edtmobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter Mobile No."
                    android:inputType="number"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edtemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter Email"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edtaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter Address"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="15sp"
                    android:gravity="center"
                    android:text="Educational Detail"
                    android:textColor="@color/teal_700"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/edtqualification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter qualification"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/edtoccupation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter Occupation"
                    android:textSize="20sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:layout_marginBottom="15sp"
                    android:gravity="center"
                    android:text="Skill and Hobby"
                    android:textColor="@color/teal_700"
                    android:textSize="25sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/edtSkill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Skill"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/edtHobby"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Hobby"
                        android:textSize="20sp" />
                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/btnsubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15sp"
                android:text="Submit" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>